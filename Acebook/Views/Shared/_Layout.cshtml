                                    <h3 class="font-semibold text-gray-700 mb-1 px-2">Notifications</h3>
                                    <div id="notifList" class="space-y-2 max-h-80 overflow-y-auto"></div>
                                    <div class="border-t border-gray-200 mt-2 pt-2 text-center">
                                        <a href="/notifications"
                                            class="inline-block bg-teal-600 text-white rounded-md px-3 py-1 mt-2 hover:bg-teal-700">View all
                                            notifications</a>
                                    </div>
                                    <button id="markAllRead"
                                        class="block text-sm text-teal-700 mt-2 mx-auto hover:underline">Mark all as
                                        read</button>
                                </div>
                            </div>

                            <!-- Profile dropdown -->
                            <div class="relative">
                                <button data-testid="dropdown1" id="dropdownDefaultButton" data-dropdown-toggle="dropdown1"
                                    class="rounded-full focus:ring-4 focus:outline-none focus:ring-teal-900" type="button">
                                    <img src="@imagePath" alt="User menu"
                                        class="h-12 w-12 rounded-full border-2 border-white" />
                                </button>

                                    <!-- Dropdown menu -->
                                    <div id="dropdown1" class="z-12 hidden bg-white divide-y divide-gray-100 rounded-lg w-44 shadow-xl hover:shadow-xl">
                                        <ul class="py-2 text-sm text-gray-700 " aria-labelledby="dropdownDefaultButton">
                                        <li>
                                            <a asp-controller="Users" asp-action="Index" asp-route-id="@userId" method="get"
                                                class="block px-4 py-2 hover:bg-gray-100" id="MyProfile">My Profile</a>
                                        </li>
                                        <li>
                                            <a asp-controller="Users" asp-action="UpdateAccount" asp-route-id="@userId" method="get" class="block px-4 py-2 hover:bg-gray-100">Account Settings</a>
                                        </li>
                                        <li>
                                            <form asp-controller="Sessions" asp-action="Signout" method="post"
                                                class="d-inline">
                                            @Html.AntiForgeryToken()
                                                <button type="submit" data-testid="signout" id="signout"
                                                    class="block w-full text-left px-4 py-2 appearance-none hover:bg-gray-100">Sign
                                                    Out</button>
