<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - acebook</title>
    <script src="https://cdn.tailwindcss.com"></script>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/acebook.styles.css" asp-append-version="true" /> *@
</head>

<body class="flex flex-col min-h-screen">
    @using acebook.Models
    @using System.Linq

    @{
        int? userId = Context.Session.GetInt32("user_id");
        string? userName = Context.Session.GetString("user_name");

    }
    <header>
            <nav class="relative bg-teal-600">
                <div id="navbar" class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8 relative flex h-16 justify-between">
                        <div class="flex flex-1 items-center justify-center sm:justify-start">
                            <div class="flex shrink-0 items-center">
                                <a href="https://localhost:7196/">
                                    <img src="images/light_grey.png"
                                    alt="SeaShark Logo" class="h-8 w-auto"  />
                                </a>
                            </div>
                        
                            @if (userId != null)
                            {
                                <div class="hidden sm:ml-6 sm:block">
                                    <div class="flex space-x-4">
                                        <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-white/5 hover:text-white" -->
                                        <a href="#" aria-current="page"
                                            class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-white/15 hover:text-white">PAGE TITLE</a>
                                        <a href="#"
                                            class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-white/15 hover:text-white">Search</a>
                                    </div>
                                </div>
                            <!-- Profile dropdown -->
                                <div>
                                    <button data-testid="dropdown" id="dropdownDefaultButton" data-dropdown-toggle="dropdown" class="absolute top-1/2 -translate-y-1/2 right-2 rounded-full ring-offset-0 focus:ring-4 focus:outline-none focus:ring-teal-900 dark:focus:ring-blue-800" type="button">
                                        <img 
                                            src="images/Placeholder.png" 
                                            alt="User menu" 
                                            class="h-8 w-8 rounded-full border-2 border-white"
                                        />
                                    </button>

                                    <!-- Dropdown menu -->
                                    <div id="dropdown" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow-sm w-44 dark:bg-gray-700">
                                        <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
                                        <li>
                                            <a href="#" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">My Profile</a>
                                        </li>
                                        <li>
                                            <a class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" asp-action="Account" asp-controller="AccountSettings" method="get">Account Settings</a>
                                        </li>
                                        <li>
                                            <form asp-controller="Sessions" asp-action="Signout" method="post" class="d-inline">
                                            <button type="submit" id="signout" class="block w-full text-left px-4 py-2 appearance-none hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Sign Out</button>
                                            </form>
                                        </li>
                                        </ul>
                                    </div>
                                </div>
                            }
                            else
                            {<a>
                                <a class="absolute right-2 flex items-center rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-white/15 hover:text-white" href="https://localhost:7196/signup">Sign Up</a>
                            </a>   
                            }

                        
                        </div>
                </div>

            </nav>

            @* <ul class="navbar-nav ms-auto">
                @if (userId != null && userName != null)
                {
                    <li class="nav-item">
                        <span class="navbar-text me-2">Signed in as @userName</span>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Sessions" asp-action="Signout" method="post" class="d-inline">
                            <button type="submit" id="signout" class="btn btn-link nav-link text-dark"
                                style="border:none; padding:0;">Sign Out</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Users" asp-action="New">Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Sessions" asp-action="New">Sign In</a>
                    </li>
                }
            </ul> *@
            
    </header>
        <main role="main" class="container mx-auto flex-grow pb-3 mb-8 pt-6">
            @RenderBody()
        </main>


    <footer class="bg-white rounded-lg shadow-sm m-4 dark:bg-gray-800">
    <div class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between">
        <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400">© 2025 <a href="https://localhost:7196/" class="hover:underline">SeaShark™</a>. All Rights Reserved.
    </span>
    <ul class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500 dark:text-gray-400 sm:mt-0">
        <li>
            <a href="https://localhost:7196/Privacy" class="hover:underline me-4 md:me-6"> Privacy Policy</a>
        </li>
    </ul>
    </div>
    </footer>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> *@
    <script src="https://unpkg.com/flowbite@2.5.1/dist/flowbite.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

