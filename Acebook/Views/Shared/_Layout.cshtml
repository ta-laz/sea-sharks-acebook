                        <div class="flex flex-1 items-center justify-center sm:justify-start">
                            <div class="flex shrink-0 items-center">
                                
                                <!-- SeaShark Logo -->
                                <a asp-action="Index" asp-controller="Home" method ="get">
                                    <img src="@Url.Content("~/images/light_grey.png")"
                                    alt="SeaShark Logo" class="h-14 w-auto transition hover:brightness-200 hover:saturate-150 hover:scale-105"  />
                                </a>
                            </div>
                        
                        <!--  If statement for different views if user is/isn't signed in  -->
                            @if (userId != null)
                            {
                                <div class="hidden sm:ml-6 sm:block">

                        
                                    <div class="flex items-center justify-center gap-0">
                                    <!-- ONE form that submits both scope + SearchString -->
                                    <form method="get" action="/Search" class="flex items-center max-w-lg w-full">
                                        <div class="flex relative">
                                        <!-- Dropdown toggle button -->
                                        <button id="dropdown-button"
                                                data-dropdown-toggle="dropdown2"
                                                type="button"
                                                class="shrink-0 z-10 inline-flex items-center py-2.5 px-4 text-sm font-medium text-center text-gray-900 bg-gray-100 border border-gray-300 rounded-s-lg hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100 ">
                                            <span id="scope-label">@Label(currentScope)</span>
                                            <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                                            </svg>
                                        </button>

                                        <!-- Hidden input the form will submit -->
                                        <input type="hidden" name="scope" id="scope-input" value="@currentScope" />

                                        <!-- Flowbite dropdown menu (positioned under the button) -->
                                        <div id="dropdown2"
                                            class="z-10 hidden absolute top-full left-0 bg-white divide-y divide-gray-100 rounded-lg shadow-xl w-44">
                                            <ul class="py-2 text-sm text-gray-700" aria-labelledby="dropdown-button">
                                            <li><button type="button" class="scope-option inline-flex w-full px-4 py-2 hover:bg-gray-100" data-scope="users" data-testid="user-test-button">People</button></li>
                                            <li><button type="button" class="scope-option inline-flex w-full px-4 py-2 hover:bg-gray-100"  data-scope="posts" data-testid="post-test-button">Posts</button></li>
                                            <li><button type="button" class="scope-option inline-flex w-full px-4 py-2 hover:bg-gray-100" data-scope="comments" data-testid="comment-test-button">Comments</button></li>
                                            <li><button type="button" class="scope-option inline-flex w-full px-4 py-2 hover:bg-gray-100" data-scope="all" data-testid="all-test-button">All</button></li>
                                            </ul>
                                        </div>

                                        <!-- Search input (use placeholder, not SearchString=) -->
                                        <div class="relative w-full">
                                            <input type="search"
