        {
            "users" => "People",
            "posts" => "Posts",
            "comments" => "Comments",
            _ => "All categories"
        };

            string imagePath; 
        if (!string.IsNullOrEmpty(Context.Session.GetString("user_profile_picture")))
        {
            imagePath = Context.Session.GetString("user_profile_picture");
        }
        else
        {
            imagePath = "/images/Placeholder.png";
