<!DOCTYPE html>
<html lang="en">
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var tokens = Antiforgery.GetAndStoreTokens(Context); // sets cookie if missing
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - acebook</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <meta name="request-verification-token" content="@tokens.RequestToken" />
    <link rel="icon" type="image/x-icon" href="~/images/light_grey.png">
    <link rel="stylesheet" href="~/css/transition.css" />
</head>

@* added the session context here to be able to get it for the notification thing *@
<body data-userid="@Context.Session.GetInt32("user_id")" class="flex flex-col min-h-screen">
